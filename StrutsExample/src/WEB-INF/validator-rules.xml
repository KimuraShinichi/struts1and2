<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE form-validation PUBLIC
    "-//Apache Software Foundation//DTD Commons Validator 1.1.3//EN"
    "file:///Users/kimurashinichi/Projects/struts-lab/tomcat/apache-tomcat-8.5.100/webapps/StrutsExample/WEB-INF/dtds/validator_1_1_3.dtd">
<form-validation>

    <global>
        <validator name="required"
                   classname="org.apache.commons.validator.FieldChecks"
                   method="validateRequired"
                   methodParams="java.lang.Object, org.apache.commons.validator.ValidatorAction,
                      org.apache.commons.validator.Field, org.apache.struts.action.ActionMessages,
                      javax.servlet.http.HttpServletRequest"
                   msg="errors.required"/>
        
        <validator name="minlength"
                   classname="org.apache.commons.validator.FieldChecks"
                   method="validateMinimumLength"
                   methodParams="java.lang.Object, org.apache.commons.validator.ValidatorAction,
                      org.apache.commons.validator.Field, org.apache.struts.action.ActionMessages,
                      javax.servlet.http.HttpServletRequest"
                   msg="errors.minlength">
            <javascript>
                // JavaScript validation code if needed
            </javascript>
        </validator>

        <validator name="maxlength"
                   classname="org.apache.commons.validator.FieldChecks"
                   method="validateMaximumLength"
                   methodParams="java.lang.Object, org.apache.commons.validator.ValidatorAction,
                      org.apache.commons.validator.Field, org.apache.struts.action.ActionMessages,
                      javax.servlet.http.HttpServletRequest"
                   msg="errors.maxlength"/>

        <validator name="email"
                   classname="org.apache.commons.validator.FieldChecks"
                   method="validateEmail"
                   methodParams="java.lang.Object, org.apache.commons.validator.ValidatorAction,
                      org.apache.commons.validator.Field, org.apache.struts.action.ActionMessages,
                      javax.servlet.http.HttpServletRequest"
                   msg="errors.email"/>
    </global>

</form-validation>
